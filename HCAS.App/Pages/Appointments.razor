                    <div class="space-y-1.5">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Service Cost (MMK)</label>
                        <input type="number" step="5000" class="w-full px-5 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl focus:ring-2 focus:ring-primary outline-none transition-all font-bold text-slate-900 shadow-sm" @bind="reqModel.Cost" placeholder="0" />
                    </div>

                    <div class="space-y-1.5">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Duration</label>
                        <select class="w-full px-5 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl focus:ring-2 focus:ring-primary outline-none transition-all font-bold text-slate-900 appearance-none shadow-sm" @bind="reqModel.DurationMinutes">
                            <option value="30">30 Minutes (Short)</option>
                            <option value="60">1 Hour (Standard)</option>
                            <option value="90">1.5 Hours (Ext)</option>
                            <option value="120">2 Hours (Max)</option>
                        </select>
                    </div>
                </div>

                <div class="space-y-6">
                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-1.5">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Date</label>
                            <input type="date" class="w-full px-4 py-3 bg-slate-50 border border-slate-100 rounded-2xl focus:ring-2 focus:ring-primary outline-none transition-all font-bold text-slate-900 shadow-sm" 
                                   value="@reqModel.AppointmentDate.ToString("yyyy-MM-dd")" 
                                   @onchange="(e) => UpdateDate(e.Value?.ToString())" />
                        </div>
                        <div class="space-y-1.5">
                            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Time</label>
                            <input type="time" step="1800" class="w-full px-4 py-3 bg-slate-50 border border-slate-100 rounded-2xl focus:ring-2 focus:ring-primary outline-none transition-all font-bold text-slate-900 shadow-sm" 
                                   value="@reqModel.AppointmentDate.ToString("HH:mm")" 
                                   @onchange="(e) => UpdateTime(e.Value?.ToString())" />
                        </div>
                    </div>

                    <div class="space-y-1.5">
                        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">Clinical Notes</label>
                        <textarea class="w-full px-5 py-4 bg-slate-50 border border-slate-100 rounded-2xl focus:ring-2 focus:ring-primary outline-none transition-all font-bold text-slate-900 shadow-sm min-h-[141px] resize-none" @bind="reqModel.Notes" placeholder="Record details about patient condition, observations, or follow-up instructions..."></textarea>
                    </div>
                </div>
            </div>
            
            <div class="p-6 md:p-8 bg-slate-900 flex flex-col sm:flex-row justify-between items-center gap-4">
                <div class="text-white/50 text-[10px] font-black uppercase tracking-[0.2em] text-center sm:text-left">Validated Clinical Entry System</div>
                <div class="flex gap-4 w-full sm:w-auto">
                    <button class="flex-1 sm:flex-none px-6 py-3 text-white/70 font-black uppercase tracking-widest text-xs hover:text-white transition-colors border border-white/10 rounded-xl sm:border-0" @onclick="CloseModal">Discard</button>
                    <button class="flex-1 sm:flex-none px-6 py-3 bg-emerald-500 text-white font-black uppercase tracking-widest text-xs rounded-xl shadow-xl hover:bg-emerald-400 hover:shadow-emerald-500/20 transition-all active:scale-95" @onclick="SaveAppointment">Confirm Records</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private enum ViewMode { List, Month, Day }
    private ViewMode viewMode = ViewMode.Month;
    private DateTime currentMonth = DateTime.Today;
    private DateTime currentDay = DateTime.Today;
    private List<DateTime> calendarDays = new();

    private List<AppointmentResModel> appointments = new();
    private List<DoctorsResModel> doctors = new();
    private List<PatientResModel> patients = new();
    private bool isLoading = true;
    private bool showModal = false;
    private AppointmentReqModel reqModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        CalculateCalendar();
    }

    private async Task LoadData()
    {
        isLoading = true;
        var apptResult = await AppointmentService.GetAppointmentsAsync();
        if (apptResult is { IsSuccess: true, Data: not null }) appointments = apptResult.Data;
        
        var docResult = await DoctorService.GetDoctorsAsync(1, 100);
        if (docResult is { IsSuccess: true, Data: not null, Data.Items: not null }) doctors = docResult.Data.Items.ToList();

        var patResult = await PatientService.GetPatientsAsync(1, 100);
        if (patResult is { IsSuccess: true, Data: not null, Data.Items: not null }) patients = patResult.Data.Items.ToList();
        
        isLoading = false;
    }

    private void SetView(ViewMode mode) => viewMode = mode;

    private void CalculateCalendar()
    {
        var firstDayOfMonth = new DateTime(currentMonth.Year, currentMonth.Month, 1);
        var lastDayOfMonth = firstDayOfMonth.AddMonths(1).AddDays(-1);
        
        var startDay = firstDayOfMonth.AddDays(-(int)firstDayOfMonth.DayOfWeek);
        var endDay = lastDayOfMonth.AddDays(6 - (int)lastDayOfMonth.DayOfWeek);

        calendarDays.Clear();
        for (var day = startDay; day <= endDay; day = day.AddDays(1))
        {
            calendarDays.Add(day);
        }
    }

    private void PrevMonth() { currentMonth = currentMonth.AddMonths(-1); CalculateCalendar(); }
    private void NextMonth() { currentMonth = currentMonth.AddMonths(1); CalculateCalendar(); }
    private void PrevDay() => currentDay = currentDay.AddDays(-1);
    private void NextDay() => currentDay = currentDay.AddDays(1);

    private void UpdateDate(string? val)
    {
        if (DateTime.TryParse(val, out var d))
            reqModel.AppointmentDate = d.Date.Add(reqModel.AppointmentDate.TimeOfDay);
    }

    private void UpdateTime(string? val)
    {
        if (TimeSpan.TryParse(val, out var t))
        {
            // Standardize minutes to 00 or 30
            var roundedMinutes = t.Minutes < 15 ? 0 : (t.Minutes < 45 ? 30 : 0);
            var hourOffset = t.Minutes >= 45 ? 1 : 0;
            var standardizedTime = new TimeSpan(t.Hours + hourOffset, roundedMinutes, 0);

            reqModel.AppointmentDate = reqModel.AppointmentDate.Date.Add(standardizedTime);
        }
    }

    private void PrepareAdd()
    {
        reqModel = new AppointmentReqModel 
        { 
            AppointmentDate = DateTime.Today.AddDays(1).AddHours(9),
            Status = "Active",
            AppointmentNumber = DateTime.Now.Millisecond + DateTime.Now.Second,
            Cost = new Random().Next(4, 17) * 5000
        };
        showModal = true;
    }

    private async Task SaveAppointment()
    {
        if (reqModel.PatientId == 0 || reqModel.DoctorId == 0) return;

        await AppointmentService.CreateAppointmentAsync(reqModel);
        CloseModal();
        await LoadData();
    }

    private async Task CancelAppointment(int id)
    {
        await AppointmentService.CancelAppointmentAsync(id);
        await LoadData();
    }

    private void CloseModal() => showModal = false;
}
