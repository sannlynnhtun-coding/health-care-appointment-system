<div class="flex flex-col h-full bg-slate-900 text-slate-300">
    <div class="p-6 flex items-center justify-between border-b border-slate-800">
        <div class="flex items-center gap-3">
            <img src="icon-medical.svg" class="w-8 h-8" alt="Logo" />
            <span class="text-xl font-bold text-white tracking-tight">HCAS <span class="text-primary">Smart</span></span>
        </div>
        <button class="p-2 text-slate-500 hover:text-white md:hidden" @onclick="HandleClick">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
        </button>
    </div>

    <nav class="flex-1 p-4 space-y-2">
        <NavLink class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all hover:bg-slate-800 hover:text-white group" href="" Match="NavLinkMatch.All" @onclick="HandleClick">
            <svg class="w-5 h-5 group-hover:text-primary transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
            <span class="font-medium">Dashboard</span>
        </NavLink>
        
        <NavLink class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all hover:bg-slate-800 hover:text-white group" href="doctors" @onclick="HandleClick">
            <svg class="w-5 h-5 group-hover:text-primary transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
            <span class="font-medium">Doctors</span>
        </NavLink>

        <NavLink class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all hover:bg-slate-800 hover:text-white group" href="patients" @onclick="HandleClick">
            <svg class="w-5 h-5 group-hover:text-primary transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
            <span class="font-medium">Patients</span>
        </NavLink>

        <NavLink class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all hover:bg-slate-800 hover:text-white group" href="generator" @onclick="HandleClick">
            <svg class="w-5 h-5 group-hover:text-primary transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
            <span class="font-medium">Generator</span>
        </NavLink>

        <NavLink class="flex items-center gap-3 px-4 py-3 rounded-lg transition-all hover:bg-slate-800 hover:text-white group" href="appointments" @onclick="HandleClick">
            <svg class="w-5 h-5 group-hover:text-primary transition-colors" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
            <span class="font-medium">Schedule</span>
        </NavLink>
    </nav>

    <div class="p-6 border-t border-slate-800 text-xs text-slate-500 font-medium">
        v1.0.0 Standalone
    </div>
</div>
@code {
    [Parameter] public EventCallback OnNavigate { get; set; }

    private async Task HandleClick()
    {
        if (OnNavigate.HasDelegate)
        {
            await OnNavigate.InvokeAsync();
        }
    }
}
