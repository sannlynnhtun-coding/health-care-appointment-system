@page "/doctors"
@inject DoctorService DoctorService
@inject SpecializationService SpecializationService

<div class="p-8 max-w-7xl mx-auto font-sans">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-slate-900 tracking-tight flex items-center gap-3">
            <svg class="w-8 h-8 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Medical Staff
        </h1>
        <button class="bg-primary hover:bg-emerald-700 text-white px-6 py-2.5 rounded-lg font-semibold transition-all shadow-sm hover:shadow-md active:scale-95 flex items-center gap-2" @onclick="PrepareAdd">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
            Add Doctor
        </button>
    </div>

    <div class="flex flex-wrap gap-4 mb-8 bg-white/50 backdrop-blur-sm p-4 rounded-xl border border-slate-200">
        <div class="relative flex-1">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
            <input type="text" placeholder="Search by name..." class="w-full pl-10 pr-4 py-2 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all" @bind="searchQuery" @bind:event="oninput" />
        </div>
        <select class="px-4 py-2 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary outline-none transition-all bg-white" @bind="selectedSpecializationId">
            <option value="">All Specializations</option>
            @foreach (var spec in specializations)
            {
                <option value="@spec.Id">@spec.Name</option>
            }
        </select>
        <button class="bg-slate-700 hover:bg-slate-800 text-white px-6 py-2 rounded-lg transition-colors flex items-center gap-2" @onclick="LoadDoctors">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
            Search
        </button>
    </div>

    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center py-20">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary"></div>
            <p class="mt-4 text-slate-500 font-mediumitalic">Loading medical staff...</p>
        </div>
    }
    else if (doctors == null || !doctors.Any())
    {
        <div class="text-center py-20 bg-white rounded-2xl border-2 border-dashed border-slate-200">
            <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-slate-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                    <line x1="17" y1="8" x2="21" y2="12"></line>
                    <line x1="21" y1="8" x2="17" y2="12"></line>
                </svg>
            </div>
            <p class="text-slate-500 text-lg font-medium">No doctors found matching your criteria.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var doctor in doctors)
            {
                <div class="bg-white rounded-2xl p-6 border border-slate-200 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all group">
                    <div class="flex items-center gap-4 mb-6">
                        <div class="w-14 h-14 bg-emerald-50 text-emerald-600 rounded-xl flex items-center justify-center font-bold text-xl group-hover:bg-emerald-600 group-hover:text-white transition-colors capitalize">
                            @(string.IsNullOrEmpty(doctor.Name) ? "?" : doctor.Name[0].ToString())
                        </div>
                        <div>
                            <h3 class="font-bold text-slate-900 text-lg">Dr. @doctor.Name</h3>
                            <span class="text-slate-500 text-sm font-medium">@GetSpecializationName(doctor.SpecializationId)</span>
                        </div>
                    </div>
                    <div class="flex justify-end gap-2 pt-4 border-t border-slate-100">
                        <button class="p-2 text-slate-400 hover:text-primary transition-colors hover:bg-emerald-50 rounded-lg" @onclick="() => PrepareEdit(doctor)">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                        </button>
                        <button class="p-2 text-slate-400 hover:text-red-500 transition-colors hover:bg-red-50 rounded-lg" @onclick="() => DeleteDoctor(doctor.Id)">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <div class="fixed inset-0 bg-slate-900/40 backdrop-blur-sm flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-2xl w-full max-w-md shadow-2xl animate-in fade-in zoom-in duration-200">
            <div class="p-6 border-b border-slate-100">
                <h2 class="text-xl font-bold text-slate-900">@(editDoctorId == null ? "Register New Doctor" : "Update Doctor Info")</h2>
            </div>
            <div class="p-6 space-y-4">
                <div class="space-y-1.5">
                    <label class="text-sm font-semibold text-slate-700">Full Name</label>
                    <input type="text" class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary outline-none transition-all" @bind="reqModel.Name" placeholder="Enter doctor's name" />
                </div>
                <div class="space-y-1.5">
                    <label class="text-sm font-semibold text-slate-700">Specialization</label>
                    <select class="w-full px-4 py-2 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary outline-none transition-all bg-white" @bind="reqModel.SpecializationId">
                        <option value="0">Select a specialization</option>
                        @foreach (var spec in specializations)
                        {
                            <option value="@spec.Id">@spec.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="p-6 bg-slate-50 rounded-b-2xl border-t border-slate-100 flex justify-end gap-3">
                <button class="px-5 py-2 text-slate-600 font-semibold hover:bg-slate-200 rounded-lg transition-colors" @onclick="CloseModal">Cancel</button>
                <button class="px-5 py-2 bg-primary text-white font-bold rounded-lg shadow-sm hover:bg-emerald-700 transition-all active:scale-95" @onclick="SaveDoctor">Save Doctor</button>
            </div>
        </div>
    </div>
}

@code {
    private List<DoctorsResModel> doctors = new();
    private List<SpecializationResModel> specializations = new();
    private string searchQuery = "";
    private int? selectedSpecializationId;
    private bool isLoading = true;
    private bool showModal = false;
    private int? editDoctorId = null;
    private DoctorsReqModel reqModel = new();

    protected override async Task OnInitializedAsync()
    {
        specializations = await SpecializationService.GetSpecializationsAsync();
        await LoadDoctors();
    }

    private async Task LoadDoctors()
    {
        isLoading = true;
        var result = await DoctorService.GetDoctorsAsync(1, 100, searchQuery, selectedSpecializationId);
        if (result.IsSuccess && result.Data != null)
        {
            doctors = result.Data.Items.ToList();
        }
        else
        {
            doctors = new();
        }
        isLoading = false;
    }

    private string GetSpecializationName(int id) => specializations.FirstOrDefault(s => s.Id == id)?.Name ?? "Unknown";

    private void PrepareAdd()
    {
        editDoctorId = null;
        reqModel = new();
        showModal = true;
    }

    private void PrepareEdit(DoctorsResModel doctor)
    {
        editDoctorId = doctor.Id;
        reqModel = new DoctorsReqModel { Name = doctor.Name, SpecializationId = doctor.SpecializationId };
        showModal = true;
    }

    private async Task SaveDoctor()
    {
        if (editDoctorId == null)
            await DoctorService.RegisterDoctorAsync(reqModel);
        else
            await DoctorService.UpdateDoctorAsync(editDoctorId.Value, reqModel);

        CloseModal();
        await LoadDoctors();
    }

    private async Task DeleteDoctor(int id)
    {
        await DoctorService.DeleteDoctorAsync(id);
        await LoadDoctors();
    }

    private void CloseModal() => showModal = false;
}
